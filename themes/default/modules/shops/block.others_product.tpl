<!-- BEGIN: main -->
<div class="others_product">
	<ul>
		<!-- BEGIN: loop -->
		<li class="clearfix {bg}">
			<a href="{link}" title="{title}"><img src="{src_img}" alt=""/></a>
			<br />
			<a href="{link}" title="{title}">{title}</a>
			<br />
			<!-- BEGIN: price -->
			<strong class="{class_money}">{product_price} {money_unit}</strong>
			<br />
			<!-- END: price -->
			<!-- BEGIN: discounts -->
			<span class="money">{product_discounts} {money_unit}</span>
			<br />
			<!-- END: discounts -->
			<span class="time">{time}</span>
		</li>
		<!-- END: loop -->
	</ul>
</div>
<!-- END: main -->